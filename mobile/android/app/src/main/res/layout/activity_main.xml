<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hero_bg"
            android:padding="20dp"
            android:orientation="vertical"
            android:elevation="6dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heading"
                android:textColor="@color/md_theme_on_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subheading"
                android:textColor="@color/md_theme_on_primary"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/statusChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/serviceStateChip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="@string/service_state_off"
                    app:chipIconEnabled="true"
                    app:chipIconTint="@color/md_theme_on_primary"
                    android:textColor="@color/md_theme_on_primary"
                    app:chipBackgroundColor="@color/md_theme_primary_dark" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/aiChip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="AI/ML on"
                    android:textColor="@color/md_theme_on_primary"
                    app:chipBackgroundColor="@color/md_theme_primary_dark" />

            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FinAccAI.Card"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/base_url_label"
                    android:textColor="@color/md_theme_on_background"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/baseUrlInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/md_theme_card"
                    android:hint="@string/base_url_hint"
                    android:inputType="textUri"
                    android:padding="12dp"
                    android:textColor="@color/md_theme_on_background"
                    android:textColorHint="@color/md_theme_muted" />

                <Button
                    android:id="@+id/analyzeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/analyze_sample" />

                <Button
                    android:id="@+id/analyzeLiveButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/analyze_live"
                    android:backgroundTint="@color/md_theme_primary_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/aiSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/toggle_ai"
                        android:textColor="@color/md_theme_on_background"
                        android:checked="true" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/screenshotSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/toggle_screenshot"
                        android:textColor="@color/md_theme_on_background" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FinAccAI.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_idle"
                    android:textColor="@color/md_theme_muted"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lastReportLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_last_report"
                    android:textColor="@color/md_theme_on_background"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/reportUrlText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_reports"
                    android:textColor="@color/md_theme_muted"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/openReportButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/open_report"
                    android:backgroundTint="@color/md_theme_primary_dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.FinAccAI.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/report_history"
                    android:textColor="@color/md_theme_on_background"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reportList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/accessibilityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/open_accessibility"
            android:backgroundTint="@color/md_theme_accent"
            android:textColor="@color/md_theme_surface" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
