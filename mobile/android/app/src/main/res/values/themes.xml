<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FinAccAI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_primary_dark</item>
        <item name="colorOnPrimary">@color/md_theme_on_primary</item>
        <item name="android:statusBarColor">@color/md_theme_surface</item>
        <item name="android:navigationBarColor">@color/md_theme_surface</item>
        <item name="android:windowBackground">@color/md_theme_background</item>
        <item name="android:textColor">@color/md_theme_on_background</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="materialButtonStyle">@style/Widget.FinAccAI.Button</item>
        <item name="materialCardViewStyle">@style/Widget.FinAccAI.Card</item>
    </style>

    <style name="Widget.FinAccAI.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/md_theme_on_primary</item>
        <item name="backgroundTint">@color/md_theme_primary</item>
    </style>

    <style name="Widget.FinAccAI.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/md_theme_card</item>
        <item name="cardElevation">4dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
    </style>
</resources>
