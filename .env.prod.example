# Production Environment Configuration Template
# Copy this file to .env.prod, fill in your values, and source before building:
#   source .env.prod && cd mobile && ./deploy-prod.sh

# Google Play Keystore (for signing releases)
export FINACCAI_KEYSTORE_PATH="/path/to/keystore.jks"
export FINACCAI_KEYSTORE_PASSWORD="your-secure-keystore-password"
export FINACCAI_KEY_PASSWORD="your-secure-key-password"

# Backend API Configuration
export FINACCAI_BACKEND_URL="https://api.finaccai.example.com"

# Authentication Token (if your API requires it)
export FINACCAI_AUTH_TOKEN="your-secret-api-token"

# Privacy Policy & Legal
export FINACCAI_PRIVACY_POLICY_URL="https://finaccai.example.com/privacy"
export FINACCAI_TERMS_URL="https://finaccai.example.com/terms"

# App Versioning
export FINACCAI_VERSION_NAME="1.0.0"
export FINACCAI_VERSION_CODE="1"

# Play Store Credentials (optional - for automated uploads)
export PLAY_STORE_JSON_KEY="/path/to/play-store-key.json"

# Feature Flags
export FINACCAI_ENABLE_CRASH_REPORTING="true"
export FINACCAI_ENABLE_ANALYTICS="true"
export FINACCAI_ENABLE_SCREENSHOT_CAPTURE="true"
export FINACCAI_ENABLE_AI_ANALYSIS="true"

# Backend Health Check
export FINACCAI_HEALTH_CHECK_ENDPOINT="https://api.finaccai.example.com/api/health"

# Build Configuration
export BUILD_TYPE="release"
export MINIFY_ENABLED="true"
export DEBUG_ENABLED="false"

# Security
export ENFORCE_HTTPS_ONLY="true"
export CERTIFICATE_PINNING_ENABLED="true"
